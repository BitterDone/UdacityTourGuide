<?xml version="1.0" encoding="utf-8"?>
<!--
This layout is the template for each ListItemDO item in the list
-->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/list_item_height">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/list_item_word"
        android:tag="destination"
        android:layout_gravity="center"
        android:layout_marginRight="4dp"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:text="The Capital Grille"/>
    <ImageView
        android:id="@+id/distanceNavIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_directions_black_36dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        >

        <TextView
            android:visibility="gone"
            android:id="@+id/distanceDisplay"
            android:tag="navigation"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="42sp"
            android:text="15.2"
            tools:text="15.2"/>
    </LinearLayout>

</LinearLayout>